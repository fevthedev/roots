                        <!--<button type="button" class="btn btn-secondary btn-lg"><i class="fa fa-cogs"-->
                                                                                  <!--aria-hidden="true"></i>&nbsp;Settings-->
                        <!--</button>-->
                    <!--</div>-->
                <!--</div>-->
            <!--</div>-->

        <!--</div>-->

        <!-- mail Modal -->
        <div class="modal fade" id="mailModal" tabindex="-1" role="dialog" aria-labelledby="mailModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-success text-white">
                        <h5 class="modal-title" id="mailModalLabel">Peter Vosh</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="loginForm">

                            <div class="form-group">
                                <h3>Welcome to Roots Mail!</h3>
                            </div>

                            <div class="form-group">
                                <p class="text-muted">Welcome to Roots Mail. Communicate even easier and more privately using this system.<br><br>Peter</p>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" rows="3" placeholder="Type your response here..." style="resize: none;"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Dismiss</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Delete</button>
                        <button type="button" class="btn btn-success" data-dismiss="modal">Reply
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <footer class="col-12 mt-5 py-2">
            <p class="text-center m-0">Roots 2017 &copy;&nbsp;All rights reserved.</p>
        </footer>
    </div>

</div>
