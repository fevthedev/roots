<!-- Sign Up Modal -->
<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="signupModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="signupModalLabel">Sign Up</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="signupForm">
                    <div class="alert alert-success hidden-xs-up" id="signupFormAlert" role="alert">
                        <strong>Well done!</strong>You successfully read this important alert message.
                    </div>
                    <div class="form-group">
                        <label for="">Your Name</label>
                        <input type="text" name="userFullName" class="form-control" id="userFullName" required>
                    </div>
                    <div class="form-group">
                        <label for="">Create a Username</label>
                        <input type="text" name="userName" class="form-control" id="userName" required>
                    </div>
                    <!--<div class="form-group">-->
                        <!--<label for="">Email Address</label>-->
                        <!--<input type="email" name="userEmail" class="form-control" id="userEmail" required>-->
                    <!--</div>-->
                    <div class="form-group">
                        <label for="">Password</label>
                        <input type="password" name="userPassword" class="form-control" id="userPassword" required>
                    </div>
                    <div class="form-group">
                        <label for="">Confirm Password</label>
                        <input type="password" name="userPasswordConfirm" class="form-control" id="userPasswordConfirm"
                               required>
                    </div>
                </form>

                <div class="row justify-content-center">
                    <div class="col-12 text-center" id="successPrompt" hidden>
                        <img src="/images/successgraphic.png" class="img-fluid" />
                        <p class="text-center" id="signupSuccessLabel">Success!</p>
                        <p class="text-center" id="signupFeedbackLabel">You have signed up successfully.</p>
                        <button type="button" onclick="window.location.reload();" id="signupSuccessBtn" class="btn btn-primary btn-block">See your profile now</button>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" name="submitSignupBtn" id="submitSignupBtn">Continue
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="loginModalLabel">Sign In</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="loginForm">
                    <div class="alert alert-success hidden-xs-up" id="loginFormAlert" role="alert">
                        <strong>Well done!</strong>You successfully read this important alert message.
                    </div>
                    <div class="form-group">
                        <label for="userLoginName">Username</label>
                        <input type="text" name="userLoginName" class="form-control" id="userLoginName"
                               placeholder="Username" required>
                    </div>
                    <div class="form-group">
                        <label for="userLoginPassword">Password</label>
                        <input type="password" name="userLoginPassword" class="form-control" id="userLoginPassword"
                               placeholder="password" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" name="submitLoginBtn" id="submitLoginBtn">Continue
                </button>
            </div>
        </div>
    </div>
</div>
